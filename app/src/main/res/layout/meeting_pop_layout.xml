<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_metting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_mettingList"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_metpop_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_left_arrow"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_metpop_hyList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center"
                android:text="会议"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_metpop_typeList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center"
                android:text="类型"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_metpop_zdkList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center"
                android:text="地块"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_metpop_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingEnd="12dp"
            android:text="清除"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_metpop_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@null">

    </ListView>


</LinearLayout>